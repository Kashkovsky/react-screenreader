{
	"name": "react-screenreader",
	"version": "0.1.0",
	"description": "Extended screen reader support for React components",
	"main": "dist/react-screenreader.cjs.js",
	"module": "dist/react-screenreader.esm.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Kashkovsky/react-screenreader.git"
	},
	"keywords": [ "screenreader", "accessibility", "a11y", "react", "hooks", "screen", "reader" ],
	"author": "Denis Kashkovsky",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Kashkovsky/react-screenreader/issues"
	},
	"homepage": "https://github.com/Kashkovsky/react-screenreader#readme",
	"private": false,
	"scripts": {
		"build": "preconstruct build",
		"ts": "tsc",
		"test": "jest --no-cache",
		"dev": "preconstruct dev",
		"postinstall": "preconstruct dev",
		"clear:jsx": "rimraf src/*.jsx",
		"clear:js": "rimraf src/*.js",
		"prepublish": "yarn ts && yarn clear:jsx && yarn build && yarn clear:js && node scripts/copyBuildFiles.js",
		"publish": "cd package && npm publish && cd ..",
		"coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls"
	},
	"peerDependencies": {
		"react": "^16.8.6",
		"react-dom": "^16.8.6"
	},
	"devDependencies": {
		"@babel/core": "7.4.3",
		"@svgr/webpack": "4.1.0",
		"@types/enzyme": "^3.9.3",
		"@types/jest": "24.0.13",
		"@types/node": "12.0.5",
		"@types/react": "16.8.19",
		"@types/react-dom": "16.8.4",
		"babel-jest": "^24.8.0",
		"babel-plugin-named-asset-import": "^0.3.2",
		"babel-preset-react-app": "^9.0.0",
		"coveralls": "^3.0.4",
		"cpx": "^1.5.0",
		"enzyme": "^3.10.0",
		"enzyme-adapter-react-16": "^1.14.0",
		"jest": "^24.8.0",
		"jest-environment-jsdom-fourteen": "0.1.0",
		"jest-resolve": "24.7.1",
		"jest-watch-typeahead": "0.3.0",
		"npm-run-all": "^4.1.5",
		"preconstruct": "^0.0.79",
		"q": "^1.5.1",
		"react": "^16.8.6",
		"react-app-polyfill": "^1.0.1",
		"react-dom": "^16.8.6",
		"react-hooks-testing-library": "^0.5.1",
		"react-test-renderer": "^16.8.6",
		"rimraf": "^2.6.3",
		"typescript": "3.5.1"
	},
	"jest": {
		"collectCoverageFrom": [ "src/**/*.{js,jsx,ts,tsx}", "!src/**/*.d.ts" ],
		"setupFiles": [ "react-app-polyfill/jsdom" ],
		"setupFilesAfterEnv": [ "<rootDir>/scripts/testSetup.js" ],
		"testMatch": [
			"<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
			"<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
		],
		"testEnvironment": "jest-environment-jsdom-fourteen",
		"transform": {
			"^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest"
		},
		"transformIgnorePatterns": [
			"[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
			"^.+\\.module\\.(css|sass|scss)$"
		],
		"modulePaths": [],
		"moduleNameMapper": {
			"^react-native$": "react-native-web",
			"^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
		},
		"moduleFileExtensions": [ "web.js", "js", "web.ts", "ts", "web.tsx", "tsx", "json", "web.jsx", "jsx", "node" ],
		"watchPlugins": [ "jest-watch-typeahead/filename", "jest-watch-typeahead/testname" ]
	},
	"babel": {
		"presets": [ "react-app" ]
	},
	"types": "types"
}
